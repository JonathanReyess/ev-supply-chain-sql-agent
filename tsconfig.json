{
    "compilerOptions": {
      // 1. Module System: Use NodeNext (or Node16) to enable modern import/export syntax and features like 'import.meta'
      "module": "NodeNext",
      
      // 2. Module Resolution: Necessary for NodeNext/ESM resolution logic
      "moduleResolution": "NodeNext",
      
      // 3. Target JavaScript Version: Compile to a recent version of JavaScript
      "target": "ES2022",
      
      // 4. Output Directory: Where the compiled JavaScript files (.js) will be placed
      "outDir": "./dist",
      
      // 5. Source Directory: Root of your TypeScript files
      "rootDir": "./src",
      
      // 6. Interop: Essential for compatibility between CJS modules (like many Node libraries) and your ESM code
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      
      // 7. Strictness and Quality of Life
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true 
    },
    
    // 8. Include: Tells the compiler where to look for TypeScript files
    "include": ["src/**/*"]
  }